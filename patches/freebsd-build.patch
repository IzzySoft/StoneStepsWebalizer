+	@tar -cf $(PKG_NAME) -C $(BLDDIR) $(WEBALIZER)
+	@tar -rf $(PKG_NAME) $(PKG_FILES)
 	@echo "Adding language files..."
-	@for lang in $(PKG_LANG); do tar $(PKG_OWNER) -rf $(PKG_NAME) lang/webalizer_lang.$$lang; done
+	@for lang in $(PKG_LANG); do tar -rf $(PKG_NAME) lang/webalizer_lang.$$lang; done
