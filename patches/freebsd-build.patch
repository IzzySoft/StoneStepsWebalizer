 export   ETCDIR
 endif
 
@@ -59,8 +63,8 @@ SRCDIR   := src
 BLDDIR   := build
 
 # include and library search paths
-INCDIRS  := 
-LIBDIRS  := 
+INCDIRS  := /usr/local/include /usr/local/include/db5
+LIBDIRS  := /usr/local/lib
 
 # list of source files (the src/ prefix is assumed in build rules)
 SRCS     := $(PCHSRC) tstring.cpp linklist.cpp hashtab.cpp \
@@ -84,7 +88,7 @@ SRCS     := $(PCHSRC) tstring.cpp linklist.cpp hashtab.cpp \
